<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
        <property name="connection.url">jdbc:mariadb://localhost:3306/pizzamaker?serverTimezone=UTC</property>
        <property name="connection.username">ruslan</property>
        <property name="connection.password">master</property>
        <property name="dialect">org.hibernate.dialect.MariaDB53Dialect</property>
        <property name="show_sql">true</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hbm2ddl.auto">validate</property>

        <mapping class="com.simbirsoft.kondratyev.ruslan.pizzeria.models.Ingredient"/>
        <mapping class="com.simbirsoft.kondratyev.ruslan.pizzeria.models.Storage"/>
        <mapping class="com.simbirsoft.kondratyev.ruslan.pizzeria.models.Recipe"/>
        <mapping class="com.simbirsoft.kondratyev.ruslan.pizzeria.models.Recipes"/>

    </session-factory>
</hibernate-configuration>